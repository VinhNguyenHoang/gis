<Page xmlns="http://schemas.nativescript.org/tns.xsd"
        shownModally="onShownModally" 
        loaded="onLoaded" 
        unloaded="onUnloaded" >
  <StackLayout class="input-form">
    <TextField visibility="{{ isRouteForm == true ? 'collapsed':'visible' }}" hint="Tên quận" id="district" />
    <TextField visibility="{{ isRouteForm == true ? 'visible':'collapsed' }}" hint="Tên đường" id="route" />
    <Button text="OK" tap="onButtonTap"/>
  </StackLayout>
</Page>